<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <defaultProtocol type="Servlet 3.0" />
    <engine>
        <property name="deploymentExportPath">target/</property>
    </engine>
    <container qualifier="JBOSS_AS_MANAGED_7.X">
        <configuration>
            <property name="jbossHome">target/jboss-as-7.1.1.Final</property>
            <property name="javaVmArguments">-XX:MaxPermSize=256m -Djboss.socket.binding.port-offset=100 -Djboss.management.native.port=9054</property>
            <property name="managementPort">9154</property>
        </configuration>
    </container>
    <container qualifier="WILDFLY_AS_MANAGED_9.X">
        <configuration>
            <property name="javaVmArguments">${arquillian.container.jbossas.10.1.0.Final.jvm.args}</property>
            <property name="managementAddress">${arquillian.container.wildfly.10.1.0.Final.node0}</property>
            <property name="serverConfig">standalone.xml</property>
            <property name="enableAssertions">false</property>
            <property name="managementPort">9990</property>
        </configuration>
    </container>
</arquillian>